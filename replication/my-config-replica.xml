<?xml version="1.0"?>
<yandex>
  <!-- На каком интерфейсе будет слушать ClickHouse -->
  <listen_host>10.100.10.1</listen_host>

  <!-- Не защищённые порты -->
  <http_port>8123</http_port>
  <tcp_port>9000</tcp_port>
  <interserver_http_port>9009</interserver_http_port>

  <!-- Настройка кластера -->
  <!-- В основном конфиге удалите содержимое в remote_servers или нужно его закоментировать -->
  <remote_servers incl="clickhouse_cluster_replica"></remote_servers>
  <include_from>/etc/clickhouse-server/cluster-replica.xml</include_from>

  <zookeeper incl="zookeeper-servers" optional="true" />
  <macros incl="macros" optional="true" />
</yandex>

